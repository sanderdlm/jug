{
    "name": "dreadnip/jug",
    "description": "Turn Twig templates into a static site.",
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-pdo": "*",
        "twig/twig": "^3.3",
        "dreadnip/php-inotify": "^3.0",
        "symfony/console": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/translation": "^6.0",
        "symfony/twig-bridge": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/process": "^6.0",
        "symfony/dom-crawler": "^6.0",
        "erusev/parsedown-extra": "^0.8.1"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0",
        "phpstan/phpstan": "1.8",
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Jug\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4" : {
            "Jug\\Test\\": "tests/"
        }
    },
    "bin": ["jug"]
}
